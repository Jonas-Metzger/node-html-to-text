{
  "name": "@html-to-text/monorepo",
  "license": "MIT",
  "engines": {
    "node": ">=12.22.0"
  },
  "workspaces": [
    "packages/base",
    "packages/html-to-text"
  ],
  "scripts": {
    "build:html-to-text": "cd ./packages/html-to-text/ && npm run build",
    "build:html-to-md": "cd ./packages/html-to-md/ && npm run build",
    "build": "concurrently npm:build:*",
    "cover:html-to-text": "cd ./packages/html-to-text/ && npm run cover",
    "cover:html-to-md": "cd ./packages/html-to-md/ && npm run cover",
    "cover": "concurrently npm:cover:*",
    "example": "node ./example/html-to-text.js",
    "install:base": "cd ./packages/base/ && npm i",
    "install:html-to-text": "cd ./packages/html-to-text/ && npm i",
    "install:html-to-md": "cd ./packages/html-to-md/ && npm i",
    "lint": "eslint .",
    "postinstall": "concurrently npm:install:*",
    "prepublishOnly": "npm run lint && npm test",
    "test:html-to-text": "cd ./packages/html-to-text/ && npm run test",
    "test:html-to-md": "cd ./packages/html-to-md/ && npm run test",
    "test": "concurrently npm:test:*"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.6",
    "ava": "^4.0.0-rc.1",
    "c8": "^7.10.0",
    "chai": "^4.3.4",
    "concurrently": "^6.4.0",
    "eslint": "^8.2.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.0.3",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-cjs-es": "^1.0.1"
  }
}
